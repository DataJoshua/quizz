div[class="nested-form-wrapper options-form" data-new-record="#{fff.object.new_record?}"]
  .options-form-container
    = inline_svg_tag "cross.svg", width: 15, height: 15, class: "cross", data: { action: "click->nested-form#remove"}
    
    = fff.text_field :content, class: "form-field--small", placeholder: "Option content:"
    
    .options-form__check-box
      = fff.label :correct, class: "form-checkbox__label"
      = fff.check_box :correct, class: "form-checkbox"

  = fff.hidden_field :_destroy
